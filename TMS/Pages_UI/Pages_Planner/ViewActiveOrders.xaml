<Page x:Class="TMS.Pages_UI.Pages_Planner.ViewActiveOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS.Pages_UI.Pages_Planner"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="665"
      Title="ViewActiveOrders">
    
    <Viewbox>
        <Grid Background="LightGray">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="122,10,0,0">
                <DataGrid AutoGenerateColumns="true" CanUserAddRows="False" AlternatingRowBackground="LavenderBlush" x:Name="ActiveOrderData"
                          FontSize="16" Height="340" Width="533" />
                </ScrollViewer>
            <Button x:Name ="btnSimulate_Time" Content="Simulate Time" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="46" Margin="10,300,0,0" Click="btnSimulate_Time_Click"/>
            <Button x:Name ="btnToggleComplete" Content="Confirm Complete" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="46" Margin="10,249,0,0" Click="btnToggleComplete_Click"/>

        </Grid>
    </Viewbox>
</Page>
