<Page x:Class="TMS.Pages_UI.Pages_Admin.ModifyCarrierData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS.Pages_UI.Pages_Admin"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="665"
      Title="ModifyCarrierData">

    <Grid Background="LightGray">
        <TextBlock  Text="Carrier ID :"         Margin="62,146,516,191"  IsEnabled="False" FontSize="16"/>
        <TextBox    x:Name="txtCarrier_ID"      Margin="162,150,395,190"     Background="GhostWhite" Height="20" IsReadOnly="False" FontSize="16"/>
        <TextBlock  Text="Depot City :"         Margin="54,182,508,153" Height="25"  IsEnabled="False" FontSize="16"/>
        <TextBox    x:Name="txtDepot_City"      Margin="162,182,395,158"     Background="GhostWhite" Height="20" IsReadOnly="False" FontSize="16"/>
        <TextBlock  Text="FTL Availability :"   Margin="26,219,508,116" Height="25"  IsEnabled="False" FontSize="16"/>
        <TextBox    x:Name="txtFTL_Avail"       Margin="162,219,395,121"     Background="GhostWhite" Height="20" IsReadOnly="False" 
                    ToolTip="FTL - Full Truck Load"     FontSize="16"/>
        <TextBlock  Text="LTL Availability :"   Margin="26,256,508,79"      Height="25"  IsEnabled="False" FontSize="16"/>
        <TextBox    x:Name="txtLTL_Avail"       Margin="162,256,395,84"     Background="GhostWhite" Height="20" IsReadOnly="False" 
                    ToolTip="LTL - Less Than Load" FontSize="16"/>
        <TextBlock  Text="Modify Carrier Data"        Margin="26,12,26,243"       TextAlignment="Center"     FontSize="60"    
                    IsEnabled="False"           RenderTransformOrigin="0.681,-5.6" />
    </Grid>
</Page>
