<Page x:Class="TMS.Pages_UI.Pages_Admin.LogDirectoryOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS.Pages_UI.Pages_Admin"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="665"
      Title="LogDirectoryOptions">

    <Grid Background="LightGray">
        <Button Content="Select Location" Name="ChangeLocation" HorizontalAlignment="Left" Margin="24,51,0,0" VerticalAlignment="Top" Width="129" Click="ChangeLocation_Click"/>
        <RichTextBox x:Name="CurrentLocation" HorizontalAlignment="Left" IsReadOnly="True" IsReadOnlyCaretVisible="False" Height="47" Margin="173,47,0,0" VerticalAlignment="Top" Width="377"/>
        <Label Content="Current Log File Details" HorizontalAlignment="Left" Margin="281,134,0,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="logfileDetails" HorizontalAlignment="Left" IsReadOnly="False" IsReadOnlyCaretVisible="True" Height="173" Margin="173,165,0,0" VerticalAlignment="Top" Width="377"/>
        <Button Content="Confirm" Name="Confirm" HorizontalAlignment="Left" Margin="173,99,0,0" VerticalAlignment="Top" Width="129" Click="Confirm_Click" />
    </Grid>
</Page>
